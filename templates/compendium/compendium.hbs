<section class="tab sidebar-tab directory flexcol swse" id="compendium" data-tab="compendium">
    <header class="directory-header">
        <div class="header-actions action-buttons flexrow">
            {{#if user.isGM}}
                <button class="create-compendium" type="submit"><i class="fas fa-atlas"></i> {{localize "COMPENDIUM.Create"}}</button>
            {{/if}}
        </div>
    </header>

    <!-- replace this with filters -->
    <ol class="directory-list">
        {{#each packs as |pack label|}}
            {{log pack}}
            <li class="compendium-type">
                <h3>{{label}}</h3>
                <ol class="compendium-list">
                    {{#each pack.packs}}
                        <li class="compendium-filter" data-pack="{{this.collection}}" data-action="compendium" data-filter="" data-type="{{this.metadata.type}}">
                            <h4 class="filter-title">
                                <span class="selectable"><i class="fas fa-folder"></i> {{this.metadata.label}}</span>
                                <div class="status-icons">
                                    {{#if this.private}}<i class="fas fa-eye-slash"></i>{{/if}}
                                    {{#if this.locked}}<i class="fas fa-lock"></i>{{/if}}
                                </div>
                            </h4>
                            <footer class="compendium-footer">
                                <span class="entity-type">{{this.metadata.entity}}</span>
                                <span> ({{this.metadata.package}})</span>
                            </footer>
                        </li>
                    {{/each}}
                </ol>
            </li>
        {{/each}}
    </ol>

    <footer class="directory-footer">
        <div class="compendium-footer flexcol">
            <div class="flexrow">
                <button data-action="compendium" data-filter="-type:weapon -exotic" data-type="Item" class="compendium">Exotic Weapons</button>
<!--                <button class="compendium items">{{localize "PF1.BrowseItems"}}</button>-->
            </div>
            <div class="flexrow">
<!--                <button class="compendium bestiary">{{localize "PF1.BrowseBestiary"}}</button>-->
<!--                <button class="compendium feats">{{localize "PF1.BrowseFeats"}}</button>-->
            </div>
            <div class="flexrow">
<!--                <button class="compendium classes">{{localize "PF1.BrowseClasses"}}</button>-->
<!--                <button class="compendium races">{{localize "PF1.BrowseRaces"}}</button>-->
            </div>
            <div class="flexrow">
<!--                <button class="compendium buffs">{{localize "PF1.BrowseBuffs"}}</button>-->
            </div>
        </div>
    </footer>
</section>
