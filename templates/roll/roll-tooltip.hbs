<!--roll-->
{{#each roll.terms as |term i|}}
    {{#ifEquals (typeOf term) "Die"}}
        <section class="tooltip-part">
            <div class="dice">
                <header class="part-header flexrow">
                    <span class="part-formula">{{term._number}}d{{term._faces}}</span>
                    <span class="part-total">{{sumActiveResults term.results}}</span>
                </header>
                <ol class="dice-rolls">
                    {{#each term.results as |result i|}}
                        <li class="roll die d{{term.faces}} {{#unless term.active}}inactive{{/unless}}">{{result.result}}</li>
                    {{/each}}
                </ol>
            </div>
        </section>
    {{/ifEquals}}
{{/each}}