<div class="swse">
    {{#if canReRoll}}
        <button id="reRoll">Roll New Attributes (roll formula: {{formula}})</button>{{/if}}
    <div class="grid">
        <div>
            <table>
                <thead>
                </thead>
                <tbody>
                {{#each abilities as |ability key|}}
                    {{#unlessBoth ability ../isDroid}}
                        <tr>
                            <th style="width:50%">{{key}}</th>
                            <td>
                                <div class="swse container" data-ability="{{key}}"></div>
                            </td>
                        </tr>
                    {{/unlessBoth}}
                {{/each}}
                </tbody>
            </table>
        </div>
        <div>
            <table>
                <thead></thead>
                <tbody>
                {{#each scores as |score id|}}
                    <tr>
                        <td>
                            <div class="swse container">
                                <div class="swse movable" id="movable-{{id}}">{{score}}</div>
                            </div>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>