<form class="{{cssClass}}" autocomplete="off">
    <div class="flex flex-col" style="height:100%">
        <div>
            {{#each actor.warnings as |warning id|}}
                <span class="warning">{{{warning}}}</span><br/>
            {{/each}}
            {{#each actor.errors as |error id|}}
                <span class="error">{{{error}}}</span><br/>
            {{/each}}
        </div>
        <div class="flex-grow1">
            {{!-- Sheet Tab Navigation --}}
            <nav class="sheet-tabs tabs" data-group="primary">
                <a class="item" data-tab="summary">First Page</a>
                <a class="item" data-tab="items">Second Page</a>
<!--                <a class="item" data-tab="charClass">Class</a>-->
<!--                {{#if actor.isBeast}}<a class="item" data-tab="beast">Beast</a>{{/if}}-->
<!--                <a class="item" data-tab="equipment">Equipment</a>-->
<!--                &lt;!&ndash;        {{#if actor.system.isDroid}}<a class="item" data-tab="droid"><span>Droid Systems</span></a>{{/if}}&ndash;&gt;-->
<!--                <a class="item" data-tab="feats">Feats</a>-->
<!--                <a class="item" data-tab="talents">Talents</a>-->
<!--                <a class="item" data-tab="traits">Traits</a>-->
<!--                {{#unless actor.hideForce}}<a class="item" data-tab="force">The Force</a>{{/unless}}-->
<!--                <a class="item" data-tab="affiliations">Affiliations</a>-->
<!--                <a class="item" data-tab="description">Notes</a>-->

            </nav>

            {{!-- Sheet Body --}}
            <section class="sheet-body">
                {{!-- Summary Page --}}
                <div class="tab summary flex-col" data-group="primary" data-tab="summary">
                    <div>
                        <!--summary-->
                        {{> 'systems/swse/templates/actor/manual/parts/actor-summary.hbs'}}
                    </div>
                    <div class="flex flex-row">
                        <div class="flex flex-col">
                            <!--attributes-->
                            {{> 'systems/swse/templates/actor/manual/parts/actor-ability-scores.hbs'}}
                        </div>
                        <div class="flex flex-col flex-grow">
                            <!--health-->
                            {{> 'systems/swse/templates/actor/manual/parts/actor-health.hbs'}}
                            <!--Shields-->
                            {{> 'systems/swse/templates/actor/manual/parts/actor-shields.hbs'}}
                        </div>
                        <div class="flex flex-col">
                            <!--portrait-->
                            {{> 'systems/swse/templates/actor/parts/actor-portrait.hbs'}}
                            <!--condition-->
                            {{> 'systems/swse/templates/actor/parts/actor-condition.hbs'}}
                        </div>
                    </div>
                    <div class="flex flex-row">
                        <div class="flex-grow">
                            <!--defenses-->
                            {{> 'systems/swse/templates/actor/manual/parts/actor-defenses.hbs'}}
                        </div>
                        <div>
                            <!--darkside-->
                            {{> 'systems/swse/templates/actor/parts/actor-darkside.hbs'}}
                        </div>
                    </div>
                    <div class="flex flex-row">
                        {{> 'systems/swse/templates/actor/parts/actor-weapon-armor-summary.hbs'}}
                        {{> 'systems/swse/templates/actor/manual/parts/actor-skills.hbs'}}
                    </div>
                </div>


                {{!-- Item Page --}}
                <div class="tab summary flex flex-col" data-group="primary" data-tab="items">
                    <div class="flex flex-row">
                        <div class="flex flex-col flex-grow">

                            {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="talents" bigLabel="Talents" items=actor.talents draggable=false delete="always" description="expandable" createNew='talent' quickCreate='talent'}}
                            {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="languages" bigLabel="Languages" items=actor.languages draggable=false delete="always" description="expandable" createNew='language' quickCreate='language'}}
                            {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="species" bigLabel="Species Info" items=actor.species draggable=false delete="always" description="expandable" createNew='species' quickCreate='species'}}

                        </div>
                        <div class="flex flex-col flex-grow">
                            {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="feats" bigLabel="Feats" items=actor.feats draggable=false delete="always" description="expandable" createNew='feat' quickCreate='feat'}}

                        </div>
                    </div>

                    <div class="flex flex-row">
                        <div class="flex-grow">
                            {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="weapons" bigLabel="Weapons" items=actor.weapons draggable=false delete="always" description="expandable" createNew='weapon' quickCreate='weapon'}}
                            {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="armors" bigLabel="Armors" items=actor.armors draggable=false delete="always" description="expandable" createNew='armor' quickCreate='armor'}}
                            {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="equipment" bigLabel="Equipment" items=actor.equipment draggable=false delete="always" description="expandable" createNew='equipment' quickCreate='equipment'}}
                        </div>
                        <div class="flex-grow">
                            {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="forcePowers" bigLabel="Force Powers" items=actor.powers draggable=false quantity=true usable=true delete="always" description="expandable" createNew='forcePower' quickCreate='forcePower'}}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</form>
