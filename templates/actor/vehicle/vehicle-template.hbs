<div class="vehicle-template">
    <label for="vehicle-template">Vehicle Template</label>
    <div class="flex item" id="view-vehicle-template" data-item-id="{{actor.vehicleTemplate.id}}">

        {{#if actor.vehicleTemplate}}
            <div class="plain input flex-grow rollable" data-action="view"
                 data-item-id="{{actor.vehicleTemplate.id}}">{{actor.vehicleTemplate.name}}</div>
            <div class="species-controls flex-col">
                <a class="species-control edit" title="view item"><i
                        class="fas fa-eye"></i></a>
            </div>
            <div class="species-controls flex-col">
                <a class="species-control delete" title="delete item"><i
                        class="fas fa-trash"></i></a>
            </div>
        {{/if}}
        {{#unless actor.vehicleTemplate}}
            <div class="plain input flex-grow rollable" data-action="compendium"
                 data-action-target="swse.vehicle base types">Add Vehicle Template
            </div>
            <div class="species-controls flex-col">
                <a data-action="compendium" data-action-target="swse.vehicle base types"
                   title="{{localize "Open Compendium"}}"><i class="fas fa-folder-plus"></i></a>
            </div>
        {{/unless}}
    </div>
</div>