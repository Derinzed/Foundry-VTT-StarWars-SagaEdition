<div class="vehicle-station {{toHtmlClass crew.type}} swse {{#if crew.id}}draggable{{/if}}"  data-actor-id="{{crew.id}}" data-position="{{crew.type}}" data-slot="{{crew.slotNumber}}">
    {{#if crew.id}}
        <div class="crew-member-portrait"
             style="background-image: url('{{crew.img}}');">
            <div>{{crew.type}}: {{crew.name}}</div>
            <a class="crew-control crew-remove" title="Remove Crew" data-actor-id="{{crew.id}}" data-position="{{crew.type}}"><i class="fas fa-trash"></i></a>
        </div>
<!--        <div class=""><img class="crew-member-portrait" src="{{crew.img}}" alt="{{crew.name}}" data-edit="img" title="{{crew.name}}"/></div>-->
{{/if}}
    {{#unless crew.id}}{{crew.type}} slot{{/unless}}

    <div class="crewCover"><label for="crewCover">Crew Cover
        <select name="data.crewCover.{{crew.type}}">
            {{#select crew.cover}}
                <option value="None">None</option>
                <option value="+5 Cover Bonus">+5 Cover Bonus</option>
                <option value="+10 Cover Bonus">+10 Cover Bonus</option>
                <option value="Total Cover">Total Cover</option>
            {{/select}}
        </select>
    </label></div>
</div>