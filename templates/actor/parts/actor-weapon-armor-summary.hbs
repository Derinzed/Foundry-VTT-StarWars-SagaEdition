<div class="flex flex-col weapon-summary-header swse flex-grow">
    <div><button id="fullAttack">Full Attack</button></div>
    {{#each data.data.armors as |armor id|}}
        {{#unless armor.hide}}
            <div class="resource armor panel">
                <div class="name"><label for="name">Armor</label><div class="plain input">{{armor.name}} ({{armor.type}})</div></div>
                <div class="speed"><label for="name">Speed</label><div class="plain input">{{armor.speed}}</div></div>
                <div class="reflex-defense"><label for="name">Reflex Defense</label><div class="plain input">+{{armor.refDefense}}</div></div>
                <div class="fortitude-defense"><label for="name">Fortitude Defense</label><div class="plain input">+{{armor.fortDefense}}</div></div>
                <div class="max-dexterity"><label for="name">Max Dexterity</label><div class="plain input">+{{armor.maxDex}}</div></div>
                <div class="armor-notes"><label for="name">Notes</label><div class="plain input">{{armor.notes}}</div></div>
            </div>
        {{/unless}}
    {{/each}}
    {{#each data.data.attacks as |attack id|}}

        {{> 'systems/swse/templates/actor/parts/attack/weapon-block.hbs' attack = attack}}
    {{/each}}
</div>