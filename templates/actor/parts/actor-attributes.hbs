{{!-- Ability Scores --}}
<div class="ability-scores panel">
    <div class="ability-score">
        <div class="score">Score</div>
        <div class="temp">Temp</div>
        <div class="mod">Mod</div>
    </div>
    {{#each data.attributes as |attribute id|}}
        {{#unless attribute.skip}}
            <div class="ability-score">
                <div class="name rollable input" title="Roll 1d20 + {{attribute.roll}}"
                     data-label="{{attribute.label}}" data-roll="1d20 + {{attribute.roll}}">{{attribute.label}}</div>
                <div class="score input"><span class="center" title="classLevelBonus: {{attribute.classLevelBonus}}
speciesBonus: {{attribute.speciesBonus}}
ageBonus: {{attribute.ageBonus}}
equipmentBonus: {{attribute.equipmentBonus}}
buffBonus: {{attribute.buffBonus}}
customBonus: {{attribute.customBonus}}">{{attribute.total}}</span></div>
                <div class="temp input"><span class="center text-box direct small min-width-15"
                                              name="data.attributes.{{id}}.customBonus"
                                              data-dtype="Number">{{attribute.customBonus}}</span></div>
                <div class="mod input"><span class="center">{{attribute.roll}}</span></div>
            </div>
        {{/unless}}
    {{/each}}
    {{#unless data.lockAttributes}}
        <div class="flex flex-row">
            <div id="generationType" title="Select Ability Generation Type"><a><i class="fas fa-cog"></i></a></div>
            {{#ifEquals data.attributeGenerationType "Roll"}}
                <div id="rollAbilities" title="Roll Abilities"><a><i class="fas fa-edit"></i></a></div>
            {{/ifEquals}}
            {{#ifEquals data.attributeGenerationType "Standard Array"}}
                <div id="assignStandardArray" title="Assign Ability Scores"><a><i class="fas fa-edit"></i></a></div>
            {{/ifEquals}}
            {{#ifEquals data.attributeGenerationType "Point Buy"}}
                <div id="assignAttributePoints" title="Assign Ability Points"><a><i class="fas fa-edit"></i></a></div>
            {{/ifEquals}}
            {{#ifEquals data.attributeGenerationType "Manual"}}
                <div id="assignManual"  title="Assign Ability Scores"><a><i class="fas fa-edit"></i></a></div>
            {{/ifEquals}}
            {{#each data.levelAttributeBonus as |bonus key|}}
                {{#if bonus}}
                    <div class="leveledAttributeBonus  {{#if bonus.warn}}warning{{/if}}" data-level="{{key}}" title="Select Level Up Attribute Bonus for Level {{key}}"><a><i class="fas fa-exclamation"></i></a></div>
                {{/if}}
            {{/each}}
        </div>
    {{/unless}}
</div>
