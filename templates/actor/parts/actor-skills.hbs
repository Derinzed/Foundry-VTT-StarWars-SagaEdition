<div class="skills-header swse flex-grow resource flex-group-center">
    <label class="resource-label">Skills</label>

    <table class="skill">
        <thead>
        <tr>
            <th></th>
            <th>Total</th>
            <th>Ability</th>
            <th>Trained</th>
            <th>Focus</th>
            <th>Misc</th>
            <th>Armor</th>
            <th>Bonus</th>
        </tr>
        </thead>
        <tbody>
        {{#each actor.system.skills as |skill id|}}
            {{#unless skill.hide}}
                <tr class="draggable {{skill.rowColor}}" data-variable="{{skill.variable}}" data-label="{{skill.label}}" data-type="skill">
                    <th>
                        <a class="rollable" title="Roll 1d20 + {{skill.value}}"
                           data-label="{{id}}" data-roll="1d20 + {{skill.value}}"
                           data-notes="{{skill.notes}}">
                            <i class="fas fa-dice-d20"></i>
                        </a>
                        {{#unless skill.uut}}(TRAINED){{/unless}}
                        <a href="{{skill.link}}">{{skill.label}}</a>
                    </th>
                    <td title="{{skill.title}}">{{skill.value}}</td>
                    <td>
                        <div class="background-text-container">{{toUpperCase skill.attribute}} ({{skill.abilityBonus}})</div>
                    </td>
                    <td>
                        {{#if skill.isClass}}
                            <label title="trained skills get an additional +5">
                                <input class="skill"
                                       type="checkbox"
                                       data-id="{{id}}"
                                       data-name="system.skills.{{id}}.trained"
                                       {{#if skill.trained}}checked{{/if}} {{#if skill.locked}}disabled{{/if}}/>
                            </label>
                        {{/if}}
                        {{skill.trainedBonus}}
                    </td>
                    <td>
                        {{skill.focusBonus}}
                    </td>
                    <td>
                        {{skill.miscBonus}}
                    </td>
                    <td>
                        {{#if skill.acp}}
                            {{skill.armorPenalty}}
                        {{/if}}
                    </td>
                    <td>
                        <div class="small labeled-input">
                            <input class="input" name="system.skills.{{id}}.manualBonus" type="number"
                                   value="{{skill.manualBonus}}" placeholder="0"/>
                        </div>
                    </td>
                </tr>
            {{/unless}}
        {{/each}}
        </tbody>
    </table>
</div>