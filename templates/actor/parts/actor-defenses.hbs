{{!-- Defenses Block --}}
<div class="defenses-block panel flex flex-col">
    <div class="defense">
        <div class="defense-level-armor"><h3>Level/<br/>Armor</h3></div>
        <div class="defense-ability"><h3>Ability</h3></div>
        <div class="defense-class"><h3>Class</h3></div>
        <div class="defense-misc"><h3>Misc</h3></div>
        <div class="defense-header resource-label"><h1>Defenses</h1></div>
    </div>
    {{#each data.data.defense as |def id|}}
        {{#unless def.skip}}
            {{#if def.armorBonus}}
                <div class="defense">
                    <div class="defense-label plain input static">{{toTitleCase id}}</div>
                    <div class="defense-total plain input static"><h2>{{def.total}}</h2></div>
                    <div class="defense-10 plain input static">10</div>
                    <div class="defense-level-armor plain input static">{{def.armorBonus}}</div>
                    <div class="defense-ability plain input static">{{def.abilityBonus}}</div>
                    <div class="defense-class plain input static">{{def.classBonus}}</div>
                    <div class="defense-misc plain input static" title="{{def.miscBonusTip}}">{{def.miscBonus}}</div>
                </div>
            {{/if}}
        {{/unless}}
    {{/each}}



    {{#each data.data.defense.situationalBonuses as |bonus id|}}
        <div class="panel">{{bonus}}</div>
    {{/each}}
</div>