{{!-- Darkside Block --}}
<div class="shield-block panel flex flex-col">
    <div>
        <h1 class="resource-label">Shields</h1>
    </div>
    <div class="flex flex-row">
        <div class="resource-block"><h3><label>Total</label><div class="plain input static">{{actor.system.shields.max}}</div></h3></div>
        <div class="resource-block"><label class="top">Current</label>
            <input class="plain small" type="number" name="system.shields.value" value="{{actor.system.shields.value}}" data-dtype="Number"/>
        </div>
        <div title="Toggle Shield {{#if actor.system.shields.active}}Off{{else}}On{{/if}}"><a data-action="shield" data-action-type="toggle" class="{{#if actor.system.shields.active}}cursor{{/if}}"><i class="fas fa-shield-virus"></i></a></div>
        <div title="Shield +5"><a data-action="shield" data-action-type="plus"><i class="fas fa-plus"></i></a></div>
        <div title="Shield -5"><a data-action="shield" data-action-type="minus"><i class="fas fa-minus"></i></a></div>
        {{#if actor.system.shields.failureChance}}
            <div class="resource-block"><h3><label>Failure Chance</label><div class="plain input static">{{actor.system.shields.failureChance}}</div></h3></div>
        {{/if}}
    </div>
</div>