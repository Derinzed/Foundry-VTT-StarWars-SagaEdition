<form class="{{cssClass}}" autocomplete="off">
    <div class="flex flex-col" style="height:100%">
        <div>

            {{#each actor.warnings as |warning id|}}
                <span class="warning">{{{warning}}}</span><br/>
            {{/each}}
            {{#each actor.errors as |error id|}}
                <span class="error">{{{error}}}</span><br/>
            {{/each}}
        </div>
        <div class="flex-grow1">
            {{!-- Sheet Tab Navigation --}}
            <nav class="sheet-tabs tabs" data-group="primary">
                <a class="item" data-tab="summary">Summary</a>
                <a class="item" data-tab="charClass">Class</a>
                {{#if actor.isBeast}}<a class="item" data-tab="beast">Beast</a>{{/if}}
                <a class="item" data-tab="equipment">Equipment</a>
                <!--        {{#if
                        actor.system.isDroid}}<a class="item" data-tab="droid"><span>Droid Systems</span></a>{{/if}}-->
                <a class="item" data-tab="feats">Feats</a>
                <a class="item" data-tab="talents">Talents</a>
                <a class="item" data-tab="traits">Traits</a>
                {{#unless actor.hideForce}}<a class="item" data-tab="force">The Force</a>{{/unless}}
                <a class="item" data-tab="affiliations">Affiliations</a>
                <a class="item" data-tab="description">Notes</a>
                <a class="item" data-tab="settings">Settings</a>

            </nav>

            {{!-- Sheet Body --}}
            <section class="sheet-body">
                {{!-- Summary Page --}}
                <div class="tab summary flex-col" data-group="primary" data-tab="summary">
                    <div>
                        <!--summary-->
                        {{> 'systems/swse/templates/actor/parts/actor-summary.hbs'}}
                    </div>
                    <div class="flex flex-row">
                        <div class="flex flex-col">
                            {{> 'systems/swse/templates/actor/parts/actor-ability-scores.hbs'}}
                        </div>
                        <div class="flex flex-col flex-grow">
                            <!--health-->
                            {{> 'systems/swse/templates/actor/parts/actor-health.hbs'}}
                            <!--Shields-->
                            {{> 'systems/swse/templates/actor/parts/actor-shields.hbs'}}
                        </div>
                        <div class="flex flex-col">
                            <!--portrait-->
                            {{> 'systems/swse/templates/actor/parts/actor-portrait.hbs'}}
                            <!--condition-->
                            {{> 'systems/swse/templates/actor/parts/actor-condition.hbs'}}
                        </div>
                    </div>
                    <div class="flex flex-row">
                        <div class="flex-grow">
                            <!--defenses-->
                            {{> 'systems/swse/templates/actor/parts/actor-defenses.hbs'}}
                        </div>
                        <div>
                            <!--darkside-->
                            {{> 'systems/swse/templates/actor/parts/actor-darkside.hbs'}}

                            {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="languages" label="Languages" items=actor.system.languages draggable=false delete="always" description="expandable" createNew='language' quickCreate='language'}}

                        </div>
                    </div>
                    <div class="flex flex-row">
                        {{> 'systems/swse/templates/actor/parts/actor-weapon-armor-summary.hbs'}}
                        {{> 'systems/swse/templates/actor/parts/actor-skills.hbs'}}
                    </div>
                </div>
                
                {{!-- Class Page --}}
                <div class="tab summary" data-group="primary" data-tab="charClass">
                    {{> 'systems/swse/templates/actor/parts/actor-classes.hbs'}}
                </div>

                {{!-- Beast Page --}}
                <div class="tab beast" data-group="primary" data-tab="beast">
                    <h2><label class="resource-label">Beast
                        <a data-action="compendium" data-type="Item" data-pack="swse.beast components"
                           title="Beast"><i
                                class="fas fa-folder-plus"></i></a></label></h2>
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="natural-weapons" label="Natural Weapons" items=actor.system.naturalWeapons draggable=false quantity=false delete="always"}}
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="special-senses" label="Special Senses" items=actor.system.specialSenses draggable=false quantity=false delete="always"}}
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="species-types" label="Species Types" items=actor.system.speciesTypes draggable=false quantity=false delete="always"}}
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="special-qualities" label="Special Qualities" items=actor.system.specialQualities draggable=false quantity=false delete="always"}}

                </div>

                {{!-- Biography Tab --}}
                <div class="tab biography" data-group="primary" data-tab="description">
                    {{editor actor.system.description target="system.description" button=true owner=owner
                             editable=editable}}
                </div>

                {{!-- Owned Equipment Tab --}}
                <div class="tab items" data-group="primary" data-tab="equipment">
                    <div>
                        <h2><label class="resource-label">Equipment
                            <a data-action="compendium" data-type="Item" data-pack="swse.items"
                               data-action-target="swse.items"
                               title="Items"><i
                                    class="fas fa-folder-plus"></i></a>
                            <a data-action="compendium" data-type="Item" data-pack="swse.templates"
                               data-action-target="swse.templates"
                               title="Templates"><i
                                    class="fas fa-folder-plus"></i></a></label></h2>
                    </div>
                    <div class="grid-2col">
                        {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="unequipped" label="Unequipped" items=actor.system.unequipped draggable=true quantity=true delete="always"}}
                        {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="equipped" label="Equipped" items=actor.system.equipped draggable=true quantity=true delete="always"}}
                    </div>

                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="general-equipment" label="General Equipment" items=actor.system.inventory draggable=true quantity=true delete="always"}}

                    {{> 'systems/swse/templates/credits/credit-chip.hbs'}}

                </div>


                <div class="tab summary" data-group="primary" data-tab="droid">

                </div>

                {{!-- Owned Feats Tab --}}
                <div class="tab items" data-group="primary" data-tab="feats">
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="feats" bigLabel="Feats" items=actor.system.feats draggable=false quantity=false delete="unSupplied" compendiumFilter="-type:feat"}}
                </div>

                {{!-- Owned Talents Tab --}}
                <div class="tab items" data-group="primary" data-tab="talents">
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="talents" bigLabel="Talents" items=actor.system.talents draggable=false quantity=false delete="unSupplied" compendiumFilter="-type:talent"}}
                </div>


                {{!-- Owned Traits Tab --}}
                <div class="tab items" data-group="primary" data-tab="traits">
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="items-list" bigLabel="Traits" fields= (arr "Source") items=actor.system.traits draggable=false quantity=false delete="unSupplied" compendiumFilter="-type:trait"}}
                </div>

                {{!-- Owned Powers Tab --}}
                <div class="tab items" data-group="primary" data-tab="force">
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="force-powers" label="Force Powers" items=actor.system.powers draggable=false quantity=false delete="always" compendiumFilter="-type:forcePower"}}
                    <br/>
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="force-secrets" label="Force Secrets" items=actor.system.secrets draggable=false quantity=false delete="always" compendiumFilter="-type:forceSecret"}}
                    <br/>
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="force-techniques" label="Force Techniques" items=actor.system.techniques draggable=false quantity=false delete="always" compendiumFilter="-type:forceTechnique"}}
                    <br/>
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="force-regimens" label="Force Regimens" items=actor.system.regimens draggable=false quantity=false delete="always" compendiumFilter="-type:forceRegimen"}}
                </div>

                <div class="tab affiliations" data-group="primary" data-tab="affiliations">
                    {{> 'systems/swse/templates/actor/parts/item-list.hbs' container="affiliations" bigLabel="Affiliations" items=actor.system.affiliations draggable=false quantity=false delete="always" compendiumFilter="-type:affiliation"}}
                </div>

                <div class="tab settings" data-group="primary" data-tab="settings">
                    <div class="flexcol">
                        {{#each actor.system.settings as |setting id|}}
                            {{> 'systems/swse/templates/settings/setting.hbs' setting=setting id=id}}
                        {{/each}}
                    </div>
                </div>
            </section>
        </div>
    </div>
</form>
